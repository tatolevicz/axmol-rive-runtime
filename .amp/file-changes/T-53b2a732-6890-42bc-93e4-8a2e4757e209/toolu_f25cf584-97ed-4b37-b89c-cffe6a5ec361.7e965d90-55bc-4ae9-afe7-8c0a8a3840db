  "after": "#!/bin/bash\nset -e\n\n# Function to find axmol command\nfind_axmol() {\n    if command -v axmol &> /dev/null; then\n        echo \"axmol\"\n    elif [ -f \"$HOME/Projects/Axmol/axmol/tools/cmdline/axmol\" ]; then\n        echo \"$HOME/Projects/Axmol/axmol/tools/cmdline/axmol\"\n    elif [ -f \"$HOME/Projects/Axmol/axmol/tools/cmdline/axmol.py\" ]; then\n        echo \"python3 $HOME/Projects/Axmol/axmol/tools/cmdline/axmol.py\"\n    else\n        echo \"\"\n    fi\n}\n\nAXMOL_CMD=$(find_axmol)\n\nif [ -z \"$AXMOL_CMD\" ]; then\n    echo \"Error: Axmol command not found.\"\n    echo \"Please run ./install_axmol.sh first.\"\n    echo \"If you have already run it, try running: source ~/.zshrc\"\n    exit 1\nfi\n\nAPP_NAME=\"HelloWorld\"\n\nif [ -d \"$APP_NAME\" ]; then\n    echo \"Directory '$APP_NAME' already exists. Skipping creation.\"\nelse\n    echo \"Creating new Axmol project '$APP_NAME'...\"\n    $AXMOL_CMD new $APP_NAME -p com.arthur.helloworld -l cpp -d .\nfi\n\n# Create handy scripts inside the project\ncd \"$APP_NAME\"\n\necho \"Creating helper scripts in $APP_NAME...\"\n\n# build.sh\ncat << 'EOF' > build.sh\n#!/bin/bash\nset -e\necho \"Building for macOS (Apple Silicon)...\"\n# Configure CMake for Xcode\ncmake -S . -B build -GXcode -DCMAKE_OSX_ARCHITECTURES=arm64\n\n# Build the Debug configuration\ncmake --build build --config Debug\necho \"Build complete.\"\nEOF\nchmod +x build.sh\n\n# run.sh\ncat << 'EOF' > run.sh\n#!/bin/bash\nset -e\n# Check if the app bundle exists\nAPP_PATH=\"build/Debug/HelloWorld.desktop.app\"\nif [ ! -d \"$APP_PATH\" ]; then\n    # Try alternative name (depends on CMakeLists.txt project name)\n    APP_PATH=\"build/Debug/HelloWorld.app\"\nfi\n\nif [ -d \"$APP_PATH\" ]; then\n    echo \"Launching $APP_PATH...\"\n    open \"$APP_PATH\"\nelse\n    echo \"Error: App bundle not found at $APP_PATH\"\n    echo \"Make sure you have built the project using ./build.sh\"\n    exit 1\nfi\nEOF\nchmod +x run.sh\n\necho \"--------------------------------------------------\"\necho \"Success! Project created in ./$APP_NAME\"\necho \"To build and run:\"\necho \"  cd $APP_NAME\"\necho \"  ./build.sh\"\necho \"  ./run.sh\"\n",
